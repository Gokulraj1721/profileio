        /* Header/Profile Section */
        .profile-header {
            background: white;
            border-radius: 15px;
            padding: 40px 30px;
            text-align: center;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            margin-bottom: 30px;
        }

        .profile-img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 20px;
            border: 5px solid #667eea;
            object-fit: cover;
            background: #f0f0f0;
        }

        .profile-header h1 {
            font-size: 2.5em;
            color: #333;
            margin-bottom: 10px;
        }

        .profile-header .title {
            font-size: 1.2em;
