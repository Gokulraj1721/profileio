            margin-bottom: 15px;
            font-weight: 600;
        }

        .profile-header p {
            color: #666;
            margin-bottom: 20px;
            font-size: 1em;
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .social-links a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 45px;
            height: 45px;
            background: #667eea;
            color: white;
            border-radius: 50%;
            text-decoration: none;
            transition: all 0.3s ease;
            font-weight: bold;
        }

        .social-links a:hover {
            background: #764ba2;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        /* About Section */
        .about-section {
            background: white;
